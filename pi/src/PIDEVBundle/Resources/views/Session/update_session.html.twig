{% extends 'admin.html.twig' %}




{% block content %}



    <br>
    <br>
    <br>
    <section id="main-content">
        <section class="wrapper">
            <h3><i class="fa fa-angle-right"></i> modifier si vous voulez </h3>
            <!-- FORM VALIDATION -->
            <div class="row mt">
                <div class="col-lg-12">
                    <h4><i class="fa fa-angle-right"></i> Session </h4>
                    <div class="form-panel">
                        <div class=" form">
                            <form class="cmxform form-horizontal style-form" id="commentForm" method="post" action="">
                                <div class="form-group ">
                                    <label for="cname" class="control-label col-lg-2">titre</label>
                                    <div class="col-lg-10">
                                        {{ form_widget(form.titre, {'attr': {'class': 'form-control'}}) }}
                                    </div>
                                </div>

                                <div class="form-group ">
                                    <label for="cname" class="control-label col-lg-2">date debut</label>
                                    <div class="col-lg-10">
                                        {{ form_widget(form.dateDeSes, {'attr': {'class': 'form-control'}}) }}
                                    </div>
                                </div>
                                <div class="form-group ">
                                    <label for="cname" class="control-label col-lg-2">date fin</label>
                                    <div class="col-lg-10">
                                        {{ form_widget(form.dateFinSes, {'attr': {'class': 'form-control'}}) }}
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="col-lg-offset-2 col-lg-10">
                                        <button class="btn btn-theme" type="submit">Save</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>

                </div>
            </div>
        </section>
    </section>


    <!-- /form-panel -->

{% endblock %}