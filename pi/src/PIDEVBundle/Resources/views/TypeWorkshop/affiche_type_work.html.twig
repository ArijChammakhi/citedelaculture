{% extends 'admin.html.twig' %}




{% block content %}
    <!--main content start-->
    <section id="main-content">
        <section class="wrapper">
            <h3><i class="fa fa-angle-right"></i> Les sessions</h3>
            <div class="row mb">
                <!-- page start-->
                <div class="content-panel">
                    <div class="adv-table">
                        <table cellpadding="0" cellspacing="0" border="0" class="display table table-bordered" id="hidden-table-info">
                            <tr><td> Type Workshop </td><td>Action</td></tr>
                            {% for evenement in m %}
                                <tr>
                                    <td>
                                        {{ evenement.nom }}
                                    </td>

                                    <td>

                                        <a  class="btn btn-danger btn-block text-white" href="{{ path('supprimer_type_work',{'id': evenement.id })}}">Suprimmer </a>
                                        <a  class="btn btn-danger btn-block text-white" href="{{ path('update_type_work',{'id': evenement.id })}}">modifier </a>
                                    </td>
                                </tr>
                            {% endfor %}

                        </table>
                    </div>
                </div>
                <!-- page end-->
            </div>
            <div class="navigation">
                {{ knp_pagination_render(m) }}
            </div>
            <!-- /row -->
        </section>
        <!-- /wrapper -->
    </section>
    <!-- /MAIN CONTENT -->
    <!--main content end-->


{% endblock %}


